<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/background">
	
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:id="@+id/titelLabel" 
		android:textSize="30px" 
		android:gravity="center" android:paddingBottom="20px" android:textColor="@color/TextColor" android:shadowColor="@color/TextColor" android:text="WOODY"/>
	<TextView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="wer ist woody:"
		android:id="@+id/WerIstWoodyLabel" android:textColor="@color/TextColor"/>
		
	<TextView 
		android:text="Aktueller Spieler: " 
		android:id="@+id/aktuellerSpieler"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:textColor="@color/TextColor"/>
		
	<TableLayout 
		android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="center">
		<TableRow android:gravity="center" android:padding="10px">	
			<ImageView 
				android:id="@+id/wuerfelEinsImage"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:src="@drawable/w1"/>
			<ImageView 
				android:id="@+id/wuerfelZweiImage"
				android:orientation="horizontal" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:src="@drawable/w1" android:layout_gravity="center"/>
		</TableRow>
	</TableLayout>

	<TextView 
		android:id="@+id/ausgabe" 
		android:layout_height="wrap_content" 
		android:text=" " android:layout_gravity="center" android:paddingBottom="10px"
		android:textColor="@color/TextColor" android:layout_width="fill_parent" android:lines="2" android:gravity="center"/>
		
	<Button 
		android:id="@+id/Button01"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
